<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.Lazuli.Curem"
        versionCode = "1" 
        version     = "0.1" >


    <name>CUREM</name>

    <description>
        Aplicativo Mobile Curem
    </description>

    <author href="http://www.lazulistudio.com.br" email="rdenubila@gmail.com">
        Rodrigo Den√∫bila / Lazuli Studio
    </author>

    <icon src="icon.png" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icones/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icones/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icones/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icones/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icones/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icones/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="icones/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icones/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icones/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icones/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icones/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icones/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    <preference name="orientation" value="portrait" />
    <preference name="prerendered-icon" value="true" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />

    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <preference name="StatusBarBackgroundColor" value="#940e1b" />

    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/file" />

    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" />
    <gap:plugin name="com.jamiestarke.webviewdebug" version="1.0.8" />

</widget>